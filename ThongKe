    Connection con = null;
    PreparedStatement pst = null;
    ResultSet Rs = null,Rs1 = null;
    Statement St = null, St1 = null;
        private void disPlays(){
        String connectionUrl =  "jdbc:sqlserver://localhost;encrypt=false;user=sa;password=123456;applicationName=ADMIN-PC\\SQLEXPRESS;databaseName=QLtien";
        try {con = DriverManager.getConnection(connectionUrl);
            St = con.createStatement();
            Rs = St.executeQuery("select * from student");
            thongketable.setModel(DbUtils.resultSetToTableModel(Rs));
        } catch (Exception e) {
        }
    }
        private void disPlays1(){
        String connectionUrl =  "jdbc:sqlserver://localhost;encrypt=false;user=sa;password=123456;applicationName=ADMIN-PC\\SQLEXPRESS;databaseName=QLtien";
        try {con = DriverManager.getConnection(connectionUrl);
//        java.sql.PreparedStatement slt = con.prepareStatement("select * from student where khoa=?");
//        slt.setString(1, khoa1.getSelectedItem().toString());
//        int row = slt.executeUpdate();
            St = con.createStatement();
            Rs = St.executeQuery("select * from student where khoa='"+khoa1.getSelectedItem().toString()+"'"+"AND hocky='"+hocki.getSelectedItem().toString()+"'"+"AND namhoc='"+namhoc.getSelectedItem().toString()+"'");
            thongketable.setModel(DbUtils.resultSetToTableModel(Rs));
        } catch (Exception e) {
        }
    }
        private void disPlays2(){
        String connectionUrl =  "jdbc:sqlserver://localhost;encrypt=false;user=sa;password=123456;applicationName=ADMIN-PC\\SQLEXPRESS;databaseName=QLtien";
        try {con = DriverManager.getConnection(connectionUrl);
            St = con.createStatement();
            Rs = St.executeQuery("select * from student where lop='"+lop1.getText()+"'"+"AND hocky='"+hocki.getSelectedItem().toString()+"'"+"AND namhoc='"+namhoc.getSelectedItem().toString()+"'");
            thongketable.setModel(DbUtils.resultSetToTableModel(Rs));
        } catch (Exception e) {
        }
    }
    private void hienthiMouseClicked(java.awt.event.MouseEvent evt) {                                     

        String usename = "";
        if(usename.equals(lop1.getText())){
        disPlays1();
        }else{
        disPlays2();
        }
    }                                    

