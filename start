     */
    public void load(){
        load.setValue(0);
            for(int i = 1;i<=100;i++){
            load.setValue(i);
            try {
                Thread.sleep(50);
            } catch (InterruptedException ex) {
                Logger.getLogger(start.class.getName()).log(Level.SEVERE, null, ex);
            }
        }}
    public static void main(String args[]) {
