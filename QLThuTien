        private void disPlaysStudent(){
        String connectionUrl =  "jdbc:sqlserver://localhost;encrypt=false;user=sa;password=123456;applicationName=ADMIN-PC\\SQLEXPRESS;databaseName=QLtien";
        try {con = DriverManager.getConnection(connectionUrl);
            St = con.createStatement();
            Rs = St.executeQuery("select * from student");
            table.setModel(DbUtils.resultSetToTableModel(Rs));
        } catch (Exception e) {
        }
    }
        int cnum = 0;
    private void CountCoach(){
        try {
            St1 = con.createStatement();
            Rs1 = St1.executeQuery("select MAX(ID) from student");
            Rs1.next();
            cnum = Rs1.getInt(1)+1;
        } catch (Exception e) {
        }
    }
    private void themMouseClicked(java.awt.event.MouseEvent evt) {                                  
        String connectionUrl =  "jdbc:sqlserver://localhost;encrypt=false;user=sa;password=123456;applicationName=ADMIN-PC\\SQLEXPRESS;databaseName=QLtien";
        if (masv.getText().isEmpty() || hoten.getText().isEmpty() || ngaysinh.getText().isEmpty() 
                ||  gioitinh.getSelectedIndex() == -1|| lop.getText().isEmpty()||khoa.getSelectedIndex()==-1
                || tiennop.getText().isEmpty()|| ngaynop.getText().isEmpty()||hocki.getSelectedIndex()==-1||namhoc.getSelectedIndex()==-1 ) {
            JOptionPane.showMessageDialog(this, "thiếu thông tin");
        } else {
            try {

                con = DriverManager.getConnection(connectionUrl);
                Statement stmt = (Statement) con.createStatement();
                java.sql.PreparedStatement Add = con.prepareStatement("INSERT INTO student VALUES(?,?,?,?,?,?,?,?,?,?,?)");
                //(cID,sten,csdt,ctuoi,cdiachi,cgioitinh)
                CountCoach();
                Add.setInt(1, cnum);
                Add.setString(2, masv.getText());
                Add.setString(3, hoten.getText());
                Add.setString(4, ngaysinh.getText());
                Add.setString(5, gioitinh.getSelectedItem().toString());
                Add.setString(6, lop.getText());
                Add.setString(7, khoa.getSelectedItem().toString());
                Add.setString(8, tiennop.getText());
                Add.setString(9, ngaynop.getText());
                Add.setString(10, hocki.getSelectedItem().toString());
                Add.setString(11, namhoc.getSelectedItem().toString());
                int row = Add.executeUpdate();
//                cten.setText("");
//                ctuoi.setText("");
//                csdt.setText("");
//                cdiachi.setText("");
                con.close();
                Add.close();
                disPlaysStudent();
//                disPlayCoachs();

                JOptionPane.showMessageDialog(this, " Đã thêm ");

            } catch (Exception e) {
                JOptionPane.showMessageDialog(this, e);
            }

        }
    }                                 

