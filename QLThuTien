    private void suaMouseClicked(java.awt.event.MouseEvent evt) {                                 
        String connectionUrl =  "jdbc:sqlserver://localhost;encrypt=false;user=sa;password=123456;applicationName=ADMIN-PC\\SQLEXPRESS;databaseName=QLtien";
        if(key == 0){
            
        }else{
            try {
                con = DriverManager.getConnection(connectionUrl);
                String query = "Update student set masv=?,hoten=?,ngaysinh=?,gioitinh=?,lop=?,khoa=?,tiennop=?,ngaynop=?,hocky=?,namhoc=? where ID=?";
                java.sql.PreparedStatement edit = con.prepareStatement(query);
                edit.setString(1, masv.getText());
                edit.setString(2, hoten.getText());
                edit.setString(3, ngaysinh.getText());
                edit.setString(4, gioitinh.getSelectedItem().toString());
                
                edit.setString(5, lop.getText());
                edit.setString(6, khoa.getSelectedItem().toString());
                edit.setInt(7, Integer.valueOf(tiennop.getText()));
                edit.setString(8, ngaynop.getText());
                edit.setInt(9, Integer.valueOf(hocki.getSelectedItem().toString()));
                edit.setString(10, namhoc.getSelectedItem().toString());
                edit.setInt(11,key);
                int row = edit.executeUpdate();
                con.close();
                edit.close();
                disPlaysStudent();
                JOptionPane.showMessageDialog(this, " Đã sửa ");
                
            } catch (Exception e) {
            }
        }
    }                                

    private void xoaMouseClicked(java.awt.event.MouseEvent evt) {                                 
        String connectionUrl =  "jdbc:sqlserver://localhost;encrypt=false;user=sa;password=123456;applicationName=ADMIN-PC\\SQLEXPRESS;databaseName=QLtien";        
        if(key == 0){
        JOptionPane.showMessageDialog(this,"Chọn đối tượng xoá");
        }else{
            try {
                con = DriverManager.getConnection(connectionUrl);
                String query = "delete from student where ID="+key;
                Statement del = con.createStatement();
                del.executeUpdate(query);
                disPlaysStudent();
                JOptionPane.showMessageDialog(this,"Đã xoá");
            } catch (Exception e) {
                JOptionPane.showMessageDialog(this,e);
            }
        }
    }                                

