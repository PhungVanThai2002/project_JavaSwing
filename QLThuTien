int key = 0;
    private void tableMouseClicked(java.awt.event.MouseEvent evt) {                                   
        DefaultTableModel model =(DefaultTableModel)table.getModel();
        int MyIndex = table.getSelectedRow();
        key = Integer.valueOf(model.getValueAt(MyIndex,0).toString());
        masv.setText(model.getValueAt(MyIndex,1).toString());
        hoten.setText(model.getValueAt(MyIndex,2).toString());
        ngaysinh.setText(model.getValueAt(MyIndex,3).toString());
        gioitinh.setSelectedItem(model.getValueAt(MyIndex,4).toString());
        lop.setText(model.getValueAt(MyIndex,5).toString());
        khoa.setSelectedItem(model.getValueAt(MyIndex,6).toString());
        tiennop.setText(model.getValueAt(MyIndex,7).toString());
        ngaynop.setText(model.getValueAt(MyIndex,8).toString());
        hocki.setSelectedItem(model.getValueAt(MyIndex,9).toString());
        namhoc.setSelectedItem(model.getValueAt(MyIndex,10).toString());
    }                                  
